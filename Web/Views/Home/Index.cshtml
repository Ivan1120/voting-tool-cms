                    <i class="material-icons">share</i>
                </div>
                <a class="small-box-footer" asp-area="" asp-controller="SocialMedias" asp-action="Index">
                    @Localizer["home_index_moreInfo"] <i class="material-icons">chevron_right</i>
                </a>
