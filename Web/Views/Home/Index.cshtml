@model Web.ViewModels.DashboardViewModel;
@using  Microsoft.AspNetCore.Mvc.Localization

@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

@using Microsoft.Extensions.Localization
@using Web
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">@Localizer["Use this tool to populate your database with Candidates, Positions(Races) to elect for etc."]</h1>
    <h3>@Model.ElectionName</h3>
</div>

<br />


<section class="content-header">
    <h1 class="display-3">@Localizer["Dashboard"]</h1>
    <br />
</section>

<section class="content align-content-center">
    <div class="row">
        <div class="col-lg-4 col-md-4 col-xs-6">
            <div class="small-box bg-aqua">
                <div class="inner">
                    <h3>@Model.CandidatesCount</h3>
                    <p>@Localizer["Candidates"]</p>
                </div>
                <div class="icon">
                    <i class="material-icons">people</i>
                </div>
                <a class="small-box-footer" asp-area="" asp-controller="Candidates" asp-action="Index">
                    @Localizer["More info"] <i class="material-icons">chevron_right</i>
                </a>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-xs-6">
            <div class="small-box bg-green">
                <div class="inner">
                    <h3>@Model.PollingPlacesCount<sup style="font-size: 20px"></sup></h3>
                    <p>@Localizer["Polling Places"]</p>
                </div>
                <div class="icon">
                    <i class="material-icons">location_on</i>
                </div>
                <a class="small-box-footer" asp-area="" asp-controller="PollingPlaces" asp-action="Index">
                    @Localizer["More info"] <i class="material-icons">chevron_right</i>
                </a>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-xs-6">
            <div class="small-box bg-yellow">
                <div class="inner">
                    <h3>@Model.BallotIssuesCount</h3>
                    <p>@Localizer["Ballot Issues"]</p>
                </div>
                <div class="icon">
                    <i class="material-icons">format_list_bulleted</i>
                </div>
                <a class="small-box-footer" asp-area="" asp-controller="BallotIssues" asp-action="Index">
                    @Localizer["More info"] <i class="material-icons">chevron_right</i>
                </a>
            </div>
        </div>
    </div>

    @if (SignInManager.IsSignedIn(User))
{
    <div class="row">
        <div class="col-lg-4 col-md-4 col-xs-6">
            <div class="small-box bg-teal">
                <div class="inner">
                    <h3>@Model.RacesCount<sup style="font-size: 20px"></sup></h3>
                    <p>@Localizer["Races"]</p>
                </div>
                <div class="icon">
                    <i class="material-icons">account_box</i>
                </div>
                <a class="small-box-footer" asp-area="" asp-controller="Races" asp-action="Index">
                    @Localizer["More info"] <i class="material-icons">chevron_right</i>
                </a>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-xs-6">
            <div class="small-box bg-light-blue">
                <div class="inner">
                    <h3>@Model.ThemesCount<sup style="font-size: 20px"></sup></h3>
                    <p>@Localizer["Themes"]</p>
                </div>
                <div class="icon">
                    <i class="material-icons">format_paint</i>
                </div>
                <a class="small-box-footer" asp-area="" asp-controller="Themes" asp-action="Index">
                    @Localizer["More info"] <i class="material-icons">chevron_right</i>
                </a>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-xs-6">
            <div class="small-box bg-olive">
                <div class="inner">
                    <h3>@Model.StatesCount<sup style="font-size: 20px"></sup></h3>
                    <p>@Localizer["States"]</p>
                </div>
                <div class="icon">
                    <i class="material-icons">location_city</i>
                </div>
                <a class="small-box-footer" asp-area="" asp-controller="States" asp-action="Index">
                    @Localizer["More info"] <i class="material-icons">chevron_right</i>
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-4 col-xs-6">
            <div class="small-box bg-orange">
                <div class="inner">
                    <h3>@Model.ElectionsCount<sup style="font-size: 20px"></sup></h3>
                    <p>@Localizer["Elections"]</p>
                </div>
                <div class="icon">
                    <i class="material-icons">how_to_vote</i>
                </div>
                <a class="small-box-footer" asp-area="" asp-controller="Elections" asp-action="Index">
                    @Localizer["More info"] <i class="material-icons">chevron_right</i>
                </a>
            </div>
        </div>
        <div class="col-lg-4 col-md-4 col-xs-6">
            <div class="small-box bg-red">
                <div class="inner">
                    <h3>@Model.OpenGraphsCount<sup style="font-size: 20px"></sup></h3>
                    <p>@Localizer["Open Graphs"]</p>
                </div>
                <div class="icon">
                    <i class="material-icons">insert_chart</i>
                </div>
                <a class="small-box-footer" asp-area="" asp-controller="OpenGraphs" asp-action="Index">
                    @Localizer["More info"] <i class="material-icons">chevron_right</i>
                </a>
            </div>
        </div>
         <div class="col-lg-4 col-md-4 col-xs-6">
            <div class="small-box bg-purple">
                <div class="inner">
                    <h3>@Model.OrganizationsCount<sup style="font-size: 20px"></sup></h3>
                    <p>@Localizer["Organizations"]</p>
                </div>
                <div class="icon">
                    <i class="material-icons">home_work</i>
                </div>
                <a class="small-box-footer" asp-area="" asp-controller="Organizations" asp-action="Index">
                    @Localizer["More info"] <i class="material-icons">chevron_right</i>
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-4 col-xs-6">
            <div class="small-box bg-maroon">
                <div class="inner">

                    <h3>@Model.SocialMediaCount<sup style="font-size: 20px"></sup></h3>
                    <p>@Localizer["Social Media"]</p>

                </div>
                <div class="icon">
                    <i class="material-icons">share</i>
                </div>

                <a class="small-box-footer" asp-area="" asp-controller="SocialMedia" asp-action="Index">

                    @Localizer["More info"] <i class="material-icons">chevron_right</i>
                </a>
            </div>
        </div>
    </div>
}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-xs-12">
            <div class="small-box bg-blue">
                <a class="small-box-footer" asp-area="" asp-controller="Dgml" asp-action="Index">
                    @Localizer["Entity Relationship Diagram"] <i class="material-icons">chevron_right</i>
                </a>
            </div>
        </div>
    </div>
</section>