            </div>
        </div>
         <div class="col-lg-4 col-md-4 col-xs-6">
            <div class="small-box bg-purple">
                <div class="inner">
                    <h3>@Model.OrganizationsCount<sup style="font-size: 20px"></sup></h3>
                    <p>@Localizer["home_index_organizations"]</p>
                </div>
                <div class="icon">
                    <i class="material-icons">home_work</i>
                </div>
                <a class="small-box-footer" asp-area="" asp-controller="Organizations" asp-action="Index">
                    @Localizer["home_index_moreInfo"] <i class="material-icons">chevron_right</i>
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-4 col-md-4 col-xs-6">
            <div class="small-box bg-maroon">
                <div class="inner">
                    <h3>@Model.SocialMediasCount<sup style="font-size: 20px"></sup></h3>
                    <p>@Localizer["home_index_socialMedias"]</p>
                </div>
