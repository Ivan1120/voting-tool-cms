@model Web.Models.Domain.Step
@using  Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using Web
@* @inject IViewLocalizer Localizer *@
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = @Localizer["Edit"];
}

<h1>@ViewData["Title"]</h1>
<link rel="stylesheet" href="~/css/trumbowyg.css" />
<div class="panel panel-default">
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="ID" />
        <div class="form-group">
            <label asp-for="StepNumber" class="control-label"></label>
            <input asp-for="StepNumber" class="form-control" min="1" />
            <span asp-validation-for="StepNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StepTitle" class="control-label"></label>
            <input asp-for="StepTitle" class="form-control" />
            <span asp-validation-for="StepTitle" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="StepDescription" class="control-label"></label>
            <textarea id="editor" class="trumbowyg" asp-for="StepDescription" ></textarea>
            <span asp-validation-for="StepDescription" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-primary" />
        </div>
    </form>
</div>

<div>
    <a class="btn btn-info" asp-action="Index">@Localizer["Back"]</a>
</div>

@section scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script>window.jQuery || document.write('<script src="js/vendor/jquery-3.3.1.min.js"><\/script>')</script>
    <script src="~/lib/Trumbowyg-master/dist/trumbowyg.js"></script>
    <script>$('.trumbowyg').trumbowyg();</script>

}
